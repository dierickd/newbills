<div class="d-flex justify-content-between align-items-center w-100">
    {% if modalStatus == 'active' %}
        <div class="w-100">
            <span class="d-inline-block text-success">Le projet <b>{{ project.name }}</b> est actuellement ouvert!</span>
            <button type="button" class="d-inline-block btn btn-sm text-danger border-danger ms-2" data-bs-toggle="modal"
                    data-bs-target="#modalReopenProject">
                Clôturer le projet
            </button>
        </div>
    {% elseif modalStatus == 'closed' %}
        <div class="w-100">
            <span class="d-inline-block text-danger">Le projet <b>{{ project.name }}</b> est actuellement fermé!</span>
            <button type="button" class="d-inline-block btn btn-sm text-success border-success ms-2" data-bs-toggle="modal"
                    data-bs-target="#modalReopenProject">
                Réouvrir le projet
            </button>
            <button type="button" class="d-inline-block btn btn-sm text-danger ms-2" data-bs-toggle="modal"
                    data-bs-target="#modalarchivedProject">
                Archiver le projet
            </button>
        </div>
    {% elseif modalStatus == 'archived' %}
        <div class="w-100">
            <span class="d-inline-block text-warning">Le projet <b>{{ project.name }}</b> est actuellement archivé!</span>
        </div>
    {% endif %}
    {{ include('project_crud/_delete_form.html.twig') }}
</div>